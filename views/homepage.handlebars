    {{#each posts as |post|}}
    <article class="post">
      <div class="title">
        <a href="/post/{{post.id}}">
          <h2>{{title}}</h2>
        </a>
        <span>by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a></span>
      </div>
      <div class="content">
        <p>{{content}}</p>
      </div>
    </article>
    {{/each}}
  {{!-- </li>
</ul> --}}


        
       