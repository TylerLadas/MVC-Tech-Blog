<article class="post">
  <div class="title">
    <h2>{{post.title}}</h2>
    <span>by {{post.user.username}} on
    {{format_date post.created_at}}
    {{!-- |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a></span> --}}
  </div>
  <div class="content">
    <p>{{post.content}}</p>
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <h3 class="comment-title">Add Comment</h3>
    <textarea class="comment-body" name="comment-body"></textarea>
  </div>

  <div>
    <button class="comment-button" type="submit">Submit</button>
  </div> 
</form>
{{/if}}

<h3 class="comments-title">Comments</h3>
{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}