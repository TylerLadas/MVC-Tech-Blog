<article class="post">
  <div class="title">
    <h2>{{post.title}}</h2>
    <span>by {{post.user.username}} on
    {{post.created_at}}
    {{!-- |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a></span> --}}
  </div>
  <div class="content">
    <p>{{post.content}}</p>
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <h3>Comment</h3>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Submit</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}